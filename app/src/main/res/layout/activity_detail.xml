<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/text_sub"
        android:layout_height="200dp">
        <ImageView
            android:layout_width="290dp"
            android:layout_height="190dp"
            android:src="@drawable/nkcthi"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="Nanti Kita Cerita Tentang Hari ini"
            android:textSize="25dp"
            android:layout_weight="1"
            android:textColor="@color/purple_500"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content" >
        <TextView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:text="Pengarang"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:background="#E2F8F0"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:text="Marsella FP"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:background="#E2F8F0"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:text="Penerbit"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:background="#E2F8F0"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:padding="5dp"

            android:text="POP Publishers"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:background="#E2F8F0"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content" >
        <TextView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:text="Tahun Terbit"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:background="#E2F8F0"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:padding="5dp"

            android:text="2018"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:background="#E2F8F0"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content" >
        <TextView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:text="Genre"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:background="#E2F8F0"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:text="Flash Fiction"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:background="#E2F8F0"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="63dp"
                android:layout_height="match_parent"
                android:background="#CCF29B"
                android:src="@drawable/ic_baseline_remove_red_eye_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#CCF29B"
                android:padding="5dp"
                android:text="651k Dibaca"
                android:textColor="@color/black" />
            <ImageView
                android:layout_width="63dp"
                android:layout_height="match_parent"
                android:background="#CCF29B"
                android:src="@drawable/ic_baseline_thumb_up_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#CCF29B"
                android:padding="5dp"
                android:text="651k Disukai"
                android:textColor="@color/black" />
            <ImageView
                android:layout_width="63dp"
                android:layout_height="match_parent"
                android:background="#CCF29B"
                android:src="@drawable/ic_baseline_textsms_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#CCF29B"
                android:padding="5dp"
                android:text="20k Ulasan"
                android:textColor="@color/black" />

        </LinearLayout>



    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>